using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Numerics;

namespace test
{
    class Program
    {
        static void Main()
        {
            int input = int.Parse(Console.ReadLine());
            string result = string.Empty;
            int remainder;
            while(input>0)
            {
                remainder = input % 2;
                input = input / 2;
                result = remainder.ToString() + result;
            }
            Console.WriteLine(result);


        }
    }
}
        

